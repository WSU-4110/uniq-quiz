.QuestionContainer {
    margin: 10px;
    padding: 5% 0 5% 0;
    background-color: #FFFFFF;
    color: black;
    text-align: center;
}

.Question {
    color: black;
    background-color: #FFFFFF;
    text-align: center;
}


.AnswerContainer{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
}

.QuestionButtonContainer {
    text-align: center;
    align-items: center;
    text-decoration: none;
    justify-content: center;
    width: 100vw;
}

.QuestionButton {
    /*padding: 11% 48% 11% 48%;*/
    border: black solid 3px;
    border-radius: 5px;
    background-color: #FFFFFF;
    /*max-width: 50%;*/
    justify-content: center;
    width: 50vw;
    height: 25vh;
}

.QuestionButtonRow{
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    margin: 0;
    padding: 0;
    clear: both;
}

.QuestionButtonCol {
    flex: 0 0 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

